{
  "name": "loom",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-for-site": "vite build && rsync -a assets/css/ ../assets/css/ && rsync -a assets/js/ ../assets/js/",
    "search": "npx pagefind --site _site",
    "new": "bash scripts/new-draft.sh",
    "preview": "bundle exec jekyll serve --drafts",
    "publish": "bash scripts/publish.sh"
  },
  "dependencies": {
    "alpinejs": "^3.14.8"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "vite": "^6.1.0"
  }
}
